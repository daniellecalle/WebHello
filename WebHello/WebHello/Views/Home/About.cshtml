@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<form action="" method="POST">
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Value</th>              
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>Name</td>
                <td>
                    <input type="text" class="form-control"  name="txtName" value="" />
                  
                </td>
            </tr>
            <tr>
                <td>Sex</td>
                <td>
                    <input type="radio" name="sex" value="Male" />Male
                    <br />
                    <input type="radio" name="sex" value="Female" />Female
                </td>
            </tr>
            <tr>
                <td>Eye Color</td>
                <td>
                    <select name="color" class="form-control">
                        <option value="">Seleccione...</option>
                        <option value="">Green</option>
                        <option value="">Yellow</option>
                        <option value="">Blue</option>
                        <option value="">Black</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Check all that Apply</td>
                <td>
                    <input type="checkbox" name="check1" value="" />Over 6 feet tall
                    <br />
                    <input type="checkbox" name="check2" value="" />Over 200 pounds
                </td>
            </tr>

            <tr>
                <td colspan="3">
                    <p>Describe your athletic ability</p>
                    <textarea class="form-control" rows="3" cols="200"></textarea>
                </td>
                
            </tr>

            <tr >
                <td colspan="3" rowspan="12">
                    <center>
                        <input type="submit" name="btn" value="Enter My information" class="btn btn-info" />
                    </center>
                </td>
            </tr>
            
        </tbody>

    </table>


</form>
